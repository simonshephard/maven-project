// VERSION 4.0
pipeline {

    agent any

    parameters {
        string(name: 'tomcat_dev', defaultValue: '18.222.145.124', description: 'Staging Server')
        string(name: 'tomcat_prod', defaultValue: '3.16.108.205', description: 'Production Server')
    }

    triggers {
        pollSCM('* * * * *')
    }

    stages{

        stage('Build'){
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }

        stage ('Deployments'){
            parallel{
                stage ('Deploy to Staging'){
                    steps {
                        sh "scp -i ../tomcat-demo.pem **/target/*.war ec2-user@${params.tomcat_dev}:/var/lib/tomcat7/webapps"
                    }
                }
                stage ("Deploy to Production"){
                    steps {
                        sh "scp -i ../tomcat-demo.pem **/target/*.war ec2-user@${params.tomcat_prod}:/var/lib/tomcat7/webapps"
                    }
                }
            }
        }

    }

}

